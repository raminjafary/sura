{
  "name": "@raminjafary/sura",
  "description": "Generate PDF or screenshot with Node and Playwright",
  "version": "0.1.3",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raminjafary/sura"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "<raminjafary1993@gmail.com>",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "yarn build && yarn build:styles && node --loader ts-node/esm ./playground/server.ts --extension ts",
    "lint": "eslint --ext .ts,.js,.json .",
    "lint:fix": "yarn lint --fix",
    "prepublish": "yarn build",
    "test": "jest",
    "build:styles": "sass --no-source-map playground/public",
    "test:report": "yarn test --coverageReporters=text-summary",
    "release": "standard-version $* && git push --follow-tags"
  },
  "dependencies": {
    "playwright": "^1.14.1",
    "sass": "^1.40.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@types/sass": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tsc": "^2.0.0",
    "typescript": "^4.4.3"
  }
}
