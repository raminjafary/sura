{
  "name": "@raminjafary/sura",
  "description": "Generate PDF or screenshot with Node and Playwright",
  "version": "0.1.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raminjafary/sura"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "<raminjafary1993@gmail.com>",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "dev": "yarn build && yarn build:styles && ts-node -P playground/tsconfig.json playground/server.ts",
    "lint": "eslint --ext .ts,.js,.json .",
    "lint:fix": "yarn lint --fix",
    "prepublish": "yarn build",
    "test": "jest",
    "build:styles": "sass --no-source-map playground/public",
    "test:report": "yarn test --coverageReporters=text-summary",
    "release": "standard-version $* && git push --follow-tags && npm publish"
  },
  "dependencies": {
    "playwright": "^1.7.0",
    "sass": "^1.32.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/sass": "1.16.0",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "eslint": "7.20.0",
    "eslint-config-prettier": "8.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "standard-version": "9.1.1",
    "ts-jest": "26.5.1",
    "ts-node": "9.1.1",
    "tsc": "1.20150623.0",
    "typescript": "4.1.5"
  }
}
